{
    "compilerOptions": {
      "target": "es2020",
      "module": "CommonJS",
      "outDir": "dist",
      "moduleResolution": "node" ,
      "noImplicitAny": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "rootDirs": [
        "src",
        "tests"
      ],
      "baseUrl": "src"
    },
    "ts-node": {
      "esm": true
    },
    "include": [
      "src",
      "tests"
    ]
  }